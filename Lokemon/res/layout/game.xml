        <TextView android:layout_y="360dip" android:layout_height="wrap_content" android:layout_x="21dip" android:layout_width="wrap_content" android:text="TextView" android:id="@+id/my_health"></TextView>
        <TextView android:layout_height="wrap_content" android:layout_width="wrap_content" android:text="TextView" android:layout_x="194dip" android:layout_y="194dip" android:id="@+id/opp_health"></TextView>
    </AbsoluteLayout>
</RelativeLayout>
