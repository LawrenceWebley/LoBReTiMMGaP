<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:gravity="center">
    <TextView android:id="@+id/welcome_text" android:layout_height="wrap_content" android:layout_width="wrap_content" android:text="Welcome" android:gravity="center" android:layout_marginBottom="8dip" android:layout_marginTop="8dip"></TextView>
    <Button android:text="Continue" android:layout_width="wrap_content" android:id="@+id/continue_button" android:layout_height="wrap_content" android:width="160dip" android:layout_marginBottom="8dip" android:layout_marginTop="8dip"></Button>
    <Button android:text="New game" android:layout_width="wrap_content" android:id="@+id/new_button" android:layout_height="wrap_content" android:width="160dip" android:layout_marginBottom="8dip" android:layout_marginTop="8dip"></Button>
</LinearLayout>
