<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="match_parent" android:background="#e0000000">
    <LinearLayout android:id="@+id/center" android:layout_width="wrap_content" android:layout_height="wrap_content" android:orientation="vertical" android:layout_centerInParent="true">
        <ProgressBar android:layout_width="wrap_content" android:layout_height="wrap_content" android:id="@+id/progress" android:layout_gravity="center" android:layout_margin="16dip"></ProgressBar>
        <TextView android:layout_gravity="center" android:layout_margin="16dip" android:layout_height="wrap_content" android:id="@+id/message" android:layout_width="wrap_content" android:text="Waiting for opponent..." android:textStyle="bold"></TextView>
    </LinearLayout>
</RelativeLayout>
